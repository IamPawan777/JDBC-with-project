package CRUDop;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;

public class NewCRUD {

	public static void main(String[] args) {
		
		String url = "jdbc:mysql://localhost:3306/pw_jdbc";
		String user = "root";
		String password = "IamPawan";
		Connection con = null;
		String query = "insert into newCRUD(name) values (?)";
		PreparedStatement pstmt = null;
		
		try {
//			Class.forName("com.mysql.cj.jdbc.Driver");				// now this line is deprecated
			con = DriverManager.getConnection(url, user, password);
			pstmt = con.prepareStatement(query);
			
			pstmt.setString(1, "PAWAN GI");
			
			int roweffected = pstmt.executeUpdate();
			
			if(roweffected > 0) 
				System.out.println("Inserted Successfully......");
			else
				System.out.println("Not Inserted Successfully......");
			
		}  catch (SQLException e) {
			e.printStackTrace();
		}
		
		finally {
			try {
				con.close();
				pstmt.close();
			} catch (SQLException e) {
				e.printStackTrace();
			}
		}
	}

}
